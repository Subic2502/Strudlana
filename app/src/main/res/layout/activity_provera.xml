<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/proveri"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProveraActivity">

    <ImageView
        android:id="@+id/provera_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/proveripozadina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.35"
        app:srcCompat="@drawable/proveri_pozadina"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:id="@+id/proveri_naziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/proveri_sve_informacije"
        android:textColor="@color/textBoja"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/proveri_objasnjenje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/proveri_objasnjenje"
        android:textAlignment="center"
        android:textColor="@color/textBoja"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proveri_naziv" />

    <TextView
        android:id="@+id/proveri_informacije"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proveri_objasnjenje" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/provera_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:backgroundTint="@color/kajsijaTamna2"
        app:layout_constraintStart_toEndOf="@+id/proveri_informacije"
        app:layout_constraintTop_toBottomOf="@+id/proveri_informacije"
        app:srcCompat="@drawable/baseline_check_24"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>